{% extends '::base.html.twig' %}

{% block body %}
    <h1>Party list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Date</th>
                <th>Lieu</th>
                <th>Nombre max de partiipant</th>
                <th>Actions</th>
                <th>Nombre de participant</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('party_inscription', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.lieu }}</td>
                <td>{{ entity.nblimit }}</td>
                <td>{{ entity.nbPersonne }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('party_inscription', { 'id': entity.id }) }}">Inscription</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
